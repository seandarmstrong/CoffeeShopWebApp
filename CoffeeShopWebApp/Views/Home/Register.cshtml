@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#registerForm").validate({
                wrapper: "div",
                rules: {
                    FirstName: {
                        required: true,
                        minlength: 2
                    },
                    LastName: {
                        required: true,
                        minlength: 2
                    },
                    Birthday: {
                        required: true,
                        date: true
                    },
                    FavoriteCoffee: {
                        required: true,
                        minlength: 3
                    },
                    Email: {
                        required: true,
                        email: true
                    },
                    Password: {
                        required: true,
                        minlength: 6
                    }
                },
                messages: {
                    FirstName: {
                        required: "First name is required",
                        minlength: "First name must be longer than 2 letters"
                    },
                    LastName: {
                        required: "Last name is required",
                        milLength: "Last name must be longer than 2 letters"
                    },
                    Birthday: {
                        required: "Birthday is required",
                        date: "Invalid date for birthday"
                    },
                    FavoriteCoffee: {
                        required: "Favorite coffee is required",
                        minlength: "Favorite coffee must be longer than 3 letters"
                    },
                    Email: {
                        required: "A valid email address is required",
                        email: "That is not a valid email address"
                    },
                    Password: {
                        required: "A password is required",
                        minlength: "The passwod must be at least 6 characters long"
                    }
                }
            });
        });
    </script>
}

    <form id="registerForm" action="/Home/AddUser" method="post">
        <div class="row">
            <div class="col-md-12">
                <label>First Name:</label>
                <input type="text" name="FirstName" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label>Last Name:</label>
                <input type="text" name="LastName" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label>Birthday:</label>
                <input type="date" name="Birthday" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label>Favorite Coffee:</label>
                <input type="text" name="FavoriteCoffee" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label>Email:</label>
                <input type="email" name="Email" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label>Password:</label>
                <input type="password" name="Password" class="form-control" />
            </div>
        </div>
        <input type="submit" id="submit" value="Register" />
    </form>
