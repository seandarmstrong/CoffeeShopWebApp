
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- using custom CSS from site.css -->

<a href="/Home/Cart"><img src="~/Content/shopping_cart_cropped.jpg" alt="Shopping Cart Logo" id="cartlogo" height="30" width="30" /></a><label id="counter">@ViewBag.Counter</label>
<h3>Click the "Add to Cart" button to add your favorite coffee to the shopping cart!</h3>

<!-- using custom CSS from site.css -->
<!-- sets headlines for display and then pulls data from cookie -->
<div class="row">
    <div class="col-md-2">
        <h3>Coffee</h3>
    </div>
    <div class="col-md-10">
        <h3>Product Image</h3>
    </div>
</div>
<div class="row">
    <div class="col-md-2">
        <label>@ViewBag.FavCoffee</label>
    </div>
    <!-- C# if-else statement to determine what photo should be viewed depending on the users favorite coffee -->
    <div class="col-md-10">
        @if (ViewBag.FavCoffee == "Espresso")
        {
            <img src="~/Content/espresso.jpg" alt="Espresso" height="100" width="100" />
        }
        else if (ViewBag.FavCoffee == "Latte")
        {
            <img src="~/Content/latte.jpg" alt="Latte" height="100" width="100" />
        }
        else if (ViewBag.FavCoffee == "Cafe Au Lait")
        {
            <img src="~/Content/cafe_au_lait.jpg" alt="Cafe Au Lait" height="100" width="100" />
        }
        else if (ViewBag.FavCoffee == "Iced")
        {
            <img src="~/Content/iced_coffee.jpg" alt="Iced Coffee" height="100" width="100" />
        }
    </div>
</div>
<br />
<button type="button" class="btn btn-default">@Html.ActionLink("Add to Cart", "AddToCart", "Home")</button>
<button type="button" class="btn btn-default" id="viewcart">@Html.ActionLink("View Cart", "Cart", "Home")</button>


